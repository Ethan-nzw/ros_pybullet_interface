<launch>

  <node pkg="ros_pybullet_interface" name="ros_pybullet_interface" type="ros_pybullet_interface_node.py" output="screen">

    <param name="pybullet_config_filename" type="string" value="{rpbi_examples}/configs/pybullet_objects_example/pybullet.yaml"/>
    <param name="visualizer_config_filename" type="string" value="{rpbi_examples}/configs/pybullet_objects_example/visualizer.yaml"/>


    <rosparam param="pybullet_visual_object_config_filenames">
      [
      "{rpbi_examples}/configs/pybullet_objects_example/visual_sphere.yaml"
      ]
    </rosparam>

    <rosparam param="pybullet_collision_object_config_filenames">
      [
      "{rpbi_examples}/configs/floor.yaml"
      ]
    </rosparam>

  </node>

  <node pkg="ik_ros_examples" name="fig_eight" type="figure_eight_node.py">
    <param name="parent_frame_id" type="str" value="figure_eight_base"/>
    <param name="child_frame_id" type="str" value="visual_sphere"/>
  </node>

  <node pkg="tf2_ros" type="static_transform_publisher" name="figure_eight_base_in_rpbi_world" args="0.5 0 0.65 0 1.57 0 rpbi/world figure_eight_base"/>

  <node pkg="rpbi_examples" name="example" type="pybullet_objects_example_node.py" output="screen"/>

</launch>
