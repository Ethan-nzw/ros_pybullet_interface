<launch>

  <!-- Start human interface -->
  <include file="$(find operator_node)/launch/keyboard.launch"/>

  <!-- Teleoperation -->
  <!-- ============= -->

  <!-- Set eff start pose -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="tf_start_pose_in_world"
	args="0.5 0 0.5 0 0 0 world tf_start"/>

  <!-- Use operator signal to update a tf -->
  <node pkg="teleop" name="teleop_tf" type="teleop_tf_node.py">
    <param name="parent_frame" type="str" value="tf_start"/>
    <param name="child_frame" type="str" value="tf_target"/>
    <param name="start_on_init" type="bool" value="true"/>
  </node>

  <!-- Set eff start pose -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="tf_kuka_ik_target"
	args="0 0 0 0 0 0 tf_target kuka_ik_target"/>

  <!-- IK -->
  <!-- == -->



  <!-- Simulation -->
  <!-- ========== -->

  <!-- ROS-Pybullet interface -->
  <node pkg="ros_pybullet_interface" name="ros_pybullet_interface" type="ros_pybullet_interface_node.py" output="screen">
    <rosparam param="config" file="$(find rpbi_examples)/configs/teleoperation/config.yaml"/>
  </node>


</launch>
